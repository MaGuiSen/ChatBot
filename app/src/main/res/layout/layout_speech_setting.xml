<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_boy"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_rect_white_a_border_blue_a"
                android:gravity="center"
                android:text="男生"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/txt_girl"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_rect_white_a_border_gray_a"
                android:gravity="center"
                android:text="女声"
                android:textColor="#808080" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#808080"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="开启语音"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:gravity="left"
                android:id="@+id/switch_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#808080"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="播放速度"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_commit"
            android:textSize="14sp"
            android:textColor="@color/theme_color_white_a"
            android:background="@drawable/selector_bg_orange_a_b"
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>